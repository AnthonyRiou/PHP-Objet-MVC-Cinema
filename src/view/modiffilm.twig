{% extends "base.twig" %}

{% block title %} Modifier film {% endblock %}

{% block content %}
 
 
    <div id="selection">
<h2>Modifier le film </h2>

<h1>{{film.titre}} </h1>

  <form method="post" action="../modif_film/{{film.Id_film}}">
    <div>
        <br>
        <label for="titre">Nouveau nom du film : </label>
        <input type="text" name="titre" value="{{film.Titre}}"><br>
        <br>
        <label for="date_de_sortie">Date de sortie : </label>
        <input type="date" placeholder="Date de sortie" name="date_de_sortie" required/><br>
        <br>
        <label for="affiche">Affiche : </label>
        <input type="text" placeholder="url photo" name="affiche"><br>
        <br>
        <label for="real">Sélectionner un réalisateur : </label>
        <select name="id_realisateur" id="idreals">
             {% for real in reals %}
            <option value="{{real.Id_realisateur}}"> {{real.FirstName}} &nbsp; {{real.LastName}}</option>
            {% endfor %}
        </select>
        <br>
        <br>
        <label for="genre">Sélectionner un genre : </label>
        
        <select name="id_genre" id="idgenre">
               {% for genre in genres %}
            <option value="{{genre.Id_genre}}">{{genre.Nom_genre}}</option>
            {% endfor %}
        </select>
        <input type="hidden" name="id_film" value="{{film.id_film}}">
        </div>
    <br>
    <button type="submit ">Modifier le film</button>
  </form>
  </div>

{% endblock %}